<%= form_with model: [conversation, conversation.messages.new], class: "message-form", id: "new-message-form", data: { turbo_permanent: true } do |form| %>
    <%= form.text_area :content,
        placeholder: "Type your message...",
        autofocus: true,
        required: true,
        data: { conversation_target: "textArea", action: "keydown->conversation#submitForm" },
        autocomplete: "off",
        class: "message-input" %>

    <%= form.submit nil, class: "hidden" %>
<% end %>
